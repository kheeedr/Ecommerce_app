<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.khedr.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommerce"
        tools:ignore="AllowBackup">
        <activity
            android:name=".presentation.ui.orderDetails.OrderDetailsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".presentation.ui.addOrder.OrderCompletedActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.address.AddAddressActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".presentation.ui.addOrder.AddOrderActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.language.LanguageActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".presentation.ui.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.search.SearchActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.categories.CategoryProductsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.favourites.FavoritesActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.cart.CartActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.main_page.MainPageActivity"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible">

        </activity>
        <activity
            android:name=".presentation.ui.product.ProductDetailsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.categories.CategoriesActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.contact_us.ContactUsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.login.LoginActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".presentation.ui.aboutUs.AboutUsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.updateProfile.UpdateProfileActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".presentation.ui.profile.ProfileActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />
        <activity
            android:name=".presentation.ui.signup.SignUpActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
    </application>

</manifest>