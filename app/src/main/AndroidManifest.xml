<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khedr.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommerce">
        <activity android:name=".ui.LanguageActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.SplashActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SearchActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.CategoryProductsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".ui.FavoritesActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".ui.CartActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.MainPageActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.ProductDetailsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.CategoriesActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.ContactUsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.login.LoginActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.AboutUsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.UpdateProfileActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.ProfileActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.signUp.SignUpActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
    </application>

</manifest>