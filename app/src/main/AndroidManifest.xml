<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khedr.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommerce">
        <activity android:name=".ui.activites.LanguageActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activites.splash.SplashActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activites.SearchActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.CategoryProductsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />

        <activity android:name=".ui.activites.FavoritesActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" />

        <activity android:name=".ui.activites.CartActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.MainPageActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.ProductDetailsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.CategoriesActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.ContactUsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.login.LoginActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.aboutUs.AboutUsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.updateProfile.UpdateProfileActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.profile.ProfileActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>

        <activity android:name=".ui.activites.signUp.SignUpActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible"/>
    </application>

</manifest>