<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_controller"
    app:startDestination="@id/home_option">

    <fragment
        android:id="@+id/home_option"
        android:name="com.khedr.ecommerce.presentation.ui.home.HomeFragment"
        android:label="fragment_home2"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_option_to_order_option"
            app:destination="@id/order_option" />
    </fragment>
    <fragment
        android:id="@+id/notifications_option"
        android:name="com.khedr.ecommerce.presentation.ui.notification.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/order_option"
        android:name="com.khedr.ecommerce.presentation.ui.orders.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/account_option"
        android:name="com.khedr.ecommerce.presentation.ui.account.AccountFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_account" />
</navigation>